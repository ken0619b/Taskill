<!-- tasks#new  -->
<section class="section">
  <div class="columns is-mobile">
    <div class="column is-half is-offset-one-quarter">
      <%= form_for(@task) do |f| %>
      <div class="field">
        <label class="label">ふわっとした仕事内容</label>
        <div class="control">
          <%= f.text_field :title, placeholder:"銀座で新しいレストランを始める", class: "input"%>
        </div>
      </div>

      <div class="field">
        <label class="label">詳細</label>
        <div class="control">
          <%= f.text_field :content, placeholder:"会社の支持で、来年から銀座３丁目でイタリアンの店を初める為にすることを考える", class: "input" %>
        </div>
      </div>
      <%= f.submit "「ふわっとした仕事」を更新する", class: "button button is-medium is-fullwidth is-success is-outlined" %>
      <div class="is-divider"></div>
      <%= link_to "戻る", tasks_path, class: "button is-medium is-fullwidth"%>
    </div>
    <% end %>
  </div>
</section>
